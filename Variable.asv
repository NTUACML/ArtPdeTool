function [ variable ] = Variable( name, dim, varargin )
%VARIABLE Summary of this function goes here
%   Detailed explanation goes here
variable.name = name;
variable.dim = dim;
reset_data = @(N) zeros(N, 1);

if(isempty(varargin))
	variable.data = [];
else
    variable.data = reset_data(variable.dim * varargin{1});
end

end

